<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.medicalapp.users.Login">


    <!--SUBMIT BUTTON-->

    <EditText
        android:id="@+id/userid"
        android:layout_width="wrap_content"
        android:layout_height="70dp"
        android:layout_marginLeft="96dp"
        android:layout_marginTop="100dp"
        android:autofillHints=""
        android:ems="10"
        android:hint="User"
        android:inputType="textWebEditText"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.473"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.258" />

    <ImageView
        android:layout_width="46dp"
        android:layout_height="44dp"

        android:layout_marginLeft="36dp"
        android:layout_marginTop="115dp"

        android:src="@drawable/ic_person"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.069"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.267" />


    <EditText
        android:id="@+id/parola"
        android:layout_width="225dp"
        android:layout_height="64dp"

        android:layout_marginLeft="95dp"
        android:layout_marginTop="250dp"

        android:autofillHints=""
        android:ems="10"
        android:hint="Parola"
        android:inputType="textWebPassword"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.464"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.415" />

    <ImageView
        android:layout_width="57dp"
        android:layout_height="42dp"


        android:layout_marginLeft="31dp"
        android:layout_marginTop="265dp"

        android:src="@drawable/ic_passwd"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.069"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.414" />

    <Button
        android:id="@+id/button_log"
        android:layout_width="163dp"
        android:layout_height="70dp"

        android:layout_marginLeft="118dp"
        android:layout_marginTop="500dp"

        android:background="@drawable/round"
        android:text="LOG IN"
        android:textColor="@color/desert_sand"
        android:textSize="20dp"
        app:backgroundTint="@color/very_light_blue"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.392"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Spinner
        android:id="@+id/spinnerlog"
        android:layout_width="246dp"
        android:layout_height="56dp"

        android:layout_marginLeft="83dp"
        android:layout_marginTop="400dp"

        android:background="@drawable/round"
        android:backgroundTint="@color/very_light_blue" />


</RelativeLayout>