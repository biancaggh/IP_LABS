<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/App_Background"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Manual_Data_General">

    <TextView
        android:id="@+id/Label_Hearth_Rate"
        style="@style/App_Background"
        android:layout_width="149dp"
        android:layout_height="40dp"
        android:layout_marginStart="56dp"
        android:layout_marginLeft="56dp"
        android:layout_marginTop="120dp"
        android:gravity="center_vertical"
        android:text="Heart Rate:"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/include2" />

    <TextView
        android:id="@+id/Label_Step_Count"
        style="@style/App_Background"
        android:layout_width="149dp"
        android:layout_height="40dp"
        android:layout_marginStart="56dp"
        android:layout_marginLeft="56dp"
        android:layout_marginTop="188dp"
        android:gravity="center_vertical"
        android:text="Steps Count:"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/include2" />

    <TextView
        android:id="@+id/label_Calories"
        style="@style/App_Background"
        android:layout_width="149dp"
        android:layout_height="40dp"
        android:layout_marginStart="56dp"
        android:layout_marginLeft="56dp"
        android:layout_marginTop="260dp"
        android:gravity="center_vertical"
        android:text="Calories Burned:"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/include2" />

    <EditText
        android:id="@+id/Field_Hearth_Rate_Level"
        style="@style/App_Background"
        android:layout_width="115dp"
        android:layout_height="40dp"
        android:layout_marginTop="120dp"
        android:background="@drawable/md_et"
        android:ems="10"
        android:hint="Type here..."
        android:inputType="numberDecimal"
        android:maxLength="3"
        android:maxLines="1"
        android:paddingLeft="10dp"
        app:layout_constraintStart_toEndOf="@+id/Label_Hearth_Rate"
        app:layout_constraintTop_toBottomOf="@+id/include2" />

    <EditText
        android:id="@+id/Field_Steps_Count"
        style="@style/App_Background"
        android:layout_width="115dp"
        android:layout_height="40dp"
        android:layout_marginTop="188dp"
        android:background="@drawable/md_et"
        android:ems="10"
        android:hint="Type here..."
        android:inputType="numberDecimal"
        android:maxLength="8"
        app:layout_constraintStart_toEndOf="@+id/Label_Step_Count"
        app:layout_constraintTop_toBottomOf="@+id/include2" />

    <EditText
        android:id="@+id/Field_Calories_Burned"
        style="@style/App_Background"
        android:layout_width="115dp"
        android:layout_height="40dp"
        android:layout_marginTop="260dp"
        android:background="@drawable/md_et"
        android:ems="10"
        android:hint="Type here..."
        android:inputType="numberDecimal"
        android:maxLength="8"
        app:layout_constraintStart_toEndOf="@+id/label_Calories"
        app:layout_constraintTop_toBottomOf="@+id/include2" />

    <include
        android:id="@+id/include2"
        layout="@layout/toolbar_manual_data_introduction"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/Verify"
        style="@style/MD_Button_Appearance"
        android:layout_width="120dp"
        android:layout_height="40dp"
        android:layout_marginStart="144dp"
        android:layout_marginLeft="144dp"
        android:layout_marginTop="488dp"
        android:onClick="Verify"
        android:text="Verify!"
        android:textAllCaps="false"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/include2" />

</androidx.constraintlayout.widget.ConstraintLayout>