<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              tools:context=".MainActivity">

    <include layout="@layout/toolbar" />


    <!-- pentru nume-->


    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingLeft="40dp"
            android:paddingRight="40dp"
            android:layout_marginTop="20dp"
            android:layout_gravity="center_vertical">

        <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_emergency" />
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="12.04.2020 : "
                android:textStyle="bold"
                android:textColor="@android:color/black"
                android:textSize="18dp"
                android:layout_marginLeft="5dp"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nivelul glicemiei a fost de 60 mg/dl,
                                iar nivelul normal este cuprins intre
                                73-110 mg/dl."
                android:layout_marginLeft="25dp"
                android:textSize="18dp"
                android:textColor="@android:color/darker_gray"/>

    </LinearLayout>

    <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@android:color/darker_gray"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp" />


    <!--    pentru prenume-->


    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingLeft="40dp"
            android:paddingRight="40dp"
            android:layout_marginTop="20dp"
            android:layout_gravity="center_vertical">

        <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_emergency" />
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="10.04.2020 : "
                android:textStyle="bold"
                android:textColor="@android:color/black"
                android:textSize="18dp"
                android:layout_marginLeft="5dp"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tensiunea arteriala a fost
                                 150/90 mmHg, iar valoarea normala
                                  este sub 120/80 mmHg."
                android:layout_marginLeft="25dp"
                android:textSize="18dp"
                android:textColor="@android:color/darker_gray"/>

    </LinearLayout>

    <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@android:color/darker_gray"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp" />

</LinearLayout>